<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.Principal">

    <TextView
        android:id="@+id/tvFirstFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="49dp"
        android:text="Tela Principal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMeusLivros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFragLivros"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="123dp"
        android:backgroundTint="@color/azul"
        android:text="teste Ir livros"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationViewPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDicasDeLeitura"
        app:layout_constraintTop_toBottomOf="@+id/btnMeusLivros" />

    <Button
        android:id="@+id/btnCadastrarLivro"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@color/azul"
        android:text="Cadastrar Livro"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMeusLivros"
        app:layout_constraintEnd_toStartOf="@+id/btnMeusLivros"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMeusLivros"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@color/azul"
        android:text="Meus Livros"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnFragLivros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCadastrarLivro"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstFragment" />

    <Button
        android:id="@+id/btnDicasDeLeitura"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@color/azul"
        android:text="Dicas de Leitura"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnFragLivros"
        app:layout_constraintEnd_toStartOf="@+id/btnFragLivros"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewPrincipal"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:background="@color/azul"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>