<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Ajustes">


    <Button
        android:id="@+id/btnAtualizaAlarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="39dp"
        android:text="Atualiza Alarme"
        app:layout_constraintBottom_toTopOf="@+id/btnPermissao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/btnPermissao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="70dp"
        android:text="Dar Permissão"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnAtualizaAlarme"
        app:layout_constraintTop_toBottomOf="@+id/btnAtualizaAlarme" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_marginBottom="115dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btnAtualizaAlarme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rdbManha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manhã"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rdbTarde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarde"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rdbNoite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noite"
            android:textAlignment="center" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="24dp"
        android:text="Qual seu horário de leitura?"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/editMinuto" />

    <EditText
        android:id="@+id/editHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/editMinuto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMinuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="minuto"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/editHora"
        app:layout_constraintTop_toBottomOf="@+id/editHora" />

</androidx.constraintlayout.widget.ConstraintLayout>