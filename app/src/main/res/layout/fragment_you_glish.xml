<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.YouGlish">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="29dp"
        android:text="Aprenda a pronúncia das palavras"
        app:layout_constraintBottom_toTopOf="@+id/webViewYouglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webViewYouglish"
        android:layout_width="381dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="215dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webViewYouglish">

        <EditText
            android:id="@+id/editPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:ems="14"
            android:hint="Palavra"
            android:inputType="text"
            android:minHeight="48dp" />

        <RadioGroup
            android:id="@+id/radioGroupLingua"
            android:layout_width="150dp"
            android:layout_height="96dp"
            android:minHeight="96dp">

            <RadioButton
                android:id="@+id/rdbPt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portugues"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/rdbIngles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inglês"
                android:textAlignment="center" />
        </RadioGroup>

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>